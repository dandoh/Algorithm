
public class Dijkstra {
	private int[] d;
	
	public Dijkstra(WeightedGraph G, int s) {
		IndexMinPQ<Integer> pq = new IndexMinPQ<Integer>(G.V());
		d = new int[G.V()];
		
		for (int i = 0; i < G.V(); i++) {
			d[i] = Integer.MAX_VALUE;
		}
		d[s] = 0;
		
		pq.insert(s, d[s]);
		
		while (!pq.isEmpty()) {
			int v = pq.delMin();
			
			for (DirectedEdge e : G.adj(v)) {
				int t = e.to();
				double w = e.weight();
				
				if (d[t] > d[v] + w) {
					d[t] = d[v] + w;
				}
			}
		}
	}
}
