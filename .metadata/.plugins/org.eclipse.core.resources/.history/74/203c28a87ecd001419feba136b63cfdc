
public class Bipartite {	
	private Graph G;
	private boolean[] marked;
	private int[] group;
	private int[] parent;
	private boolean flag;
	
	public Bipartite(Graph G) {
		this.G = G;
		this.marked = new boolean[G.V()];
		this.flag = false;
		for (int i = 0; i < G.V(); i++) 
			if (!marked[i]) 
				dfs(G, i);
	}
	
	public void dfs(Graph G, int s) {
		if (flag) return;
		marked[s] = true;
		for (int v : G.adj(s)) {
			if (marked[v]) {
				if (group[v] == group[s])  {
					flag = true;
					return;
				}
			} else {
				dfs(G, v);
			}
		}
	}
	
	public static void main(String[] args) {
		
	}
}
