
public class WeightedGraph {
	private int V;
	private Bag<Edge>[] adj;
	
	@SuppressWarnings("unchecked")
	public WeightedGraph(int V) {
		this.V = V;
		adj = (Bag<Edge>[]) new Bag[V];
		
		for (int i = 0; i < V; i++) {
			adj[i] = new Bag<Edge>();
		}
	}
	
	public WeightedGraph(In in) {
		this(in.readInt());
		
		int E = in.readInt();
		
		for (int i = 0; i < E; i++) {
			int v = in.readChar() - 'A';
			int w = in.readChar() - 'A';
			double weight = in.readDouble();
			Edge e = new Edge(v, w, weight);
			addEdge(v, e);
			addEdge(w, e);
		}
	}
	
	public void addEdge(int v, Edge e) {
		adj[v].add(e);
	}
	
	public void print() {
		for (int i = 0; i < V; i++) {
			for (Edge e : adj[i]) {
				StdOut.println(e);
			}
		}
	}
}
